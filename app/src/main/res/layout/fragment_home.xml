<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_home"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/IDexeRoomText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Executive Room" />

            <TextView
                android:id="@+id/IDprice170"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price : RM 170.00" />

            <ImageView
                android:id="@+id/IDexePhoto"
                android:layout_width="254dp"
                android:layout_height="177dp"
                app:srcCompat="@drawable/executive_room" />

            <Button
                android:id="@+id/IDbuttonBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book now" />

            <TextView
                android:id="@+id/IDdeTripRoomText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deluxe Triple Room" />

            <TextView
                android:id="@+id/IDprice140"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price : RM 140.00" />

            <ImageView
                android:id="@+id/IDdeTripRoomPhoto"
                android:layout_width="260dp"
                android:layout_height="166dp"
                app:srcCompat="@drawable/deluxe_tripple_room" />

            <Button
                android:id="@+id/IDbuttonBook2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book now" />

            <TextView
                android:id="@+id/IDdeDouRoomText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deluxe Double Room" />

            <TextView
                android:id="@+id/IDprice120"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price : RM 120.00" />

            <ImageView
                android:id="@+id/IDdeDouRoomPhoto"
                android:layout_width="269dp"
                android:layout_height="168dp"
                app:srcCompat="@drawable/deluxe_double_room" />

            <Button
                android:id="@+id/IDbuttonBook3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="book now" />

            <TextView
                android:id="@+id/IDstandRoomText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Standard Room" />

            <TextView
                android:id="@+id/IDprice105"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price : RM 105.00" />

            <ImageView
                android:id="@+id/IDstandRoomPhoto"
                android:layout_width="270dp"
                android:layout_height="188dp"
                app:srcCompat="@drawable/standard_room" />

            <Button
                android:id="@+id/IDbuttonBook4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="book now" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>